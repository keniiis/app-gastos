<div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-plus-circle text-green-500 mr-2"></i>
        Agregar Gasto
    </h2>
    <form id="gastoForm" class="space-y-4">
        <div>
            <label class="block text-gray-700 mb-2">Descripción</label>
            <input type="text" id="gastoDescripcion" required
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>
        <div>
            <label class="block text-gray-700 mb-2">Monto (CLP)</label>
            <input type="text" id="gastoMonto" required
                   placeholder="ej: 40.800"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>
        <div>
            <label class="block text-gray-700 mb-2">Categoría</label>
            <select id="gastoCategoria" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="">Seleccionar</option>
                <option value="Alimentación">Alimentación</option>
                <option value="Transporte">Transporte</option>
                <option value="Entretenimiento">Entretenimiento</option>
                <option value="Servicios">Servicios</option>
                <option value="Salud">Salud</option>
                <option value="Educación">Educación</option>
                <option value="Otros">Otros</option>
            </select>
        </div>
        <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
            Agregar Gasto
        </button>
    </form>
</div>