<style is:global>
    /* Estilos para las tarjetas de perfil */
    .profile-card {
        transition: transform 0.3s;
    }
    
    .profile-card:hover {
        transform: translateY(-5px);
    }
    
    /* Estilos para el calendario */
    .calendar-day {
        min-height: 80px;
    }
    
    .calendar-day.has-savings {
        background-color: hsl(var(--primary) / 0.1);
    }
    
    .calendar-day.has-expense {
        background-color: hsl(var(--destructive) / 0.1);
    }
    
    /* Estilos para la calculadora */
    .calculator-button {
        transition: all 0.2s;
    }
    
    .calculator-button:hover {
        transform: scale(1.05);
    }
    
    /* Estilos para iconos de servicios */
    .service-icon {
        width: 24px;
        height: 24px;
        object-fit: contain;
    }
</style>